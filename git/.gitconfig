[credential]
  helper = osxkeychain

[grep]
  lineNumber = true

[help]
  autocorrect = 1

[push]
  default = simple

[fetch]
  prune = true

[difftool]
  prompt = false

[mergetool]
  prompt = false

[diff]
  tool = wstorm
[difftool "webstorm"]
  cmd = /usr/local/bin/wstorm diff \"$LOCAL\" \"$REMOTE\"

[merge]
  tool = wstorm
[mergetool "webstorm"]
  cmd = /usr/local/bin/wstorm merge \"$LOCAL\" \"$REMOTE\" \"$BASE\" \"$MERGED\"
  
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
